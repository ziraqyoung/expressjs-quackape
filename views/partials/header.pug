header.navbar.navbar-dark.bg-dark.fixed-top.navbar-expand-lg
  .container
    a.navbar-brand(href='/')
      i.fa-fa-cube(aria-hidden=true)
      | QuakeApe
    button.navbar-toggler(type="button", data-toggle="collapse", data-target=".navbar-collapse")
      span.sr-only Toggle Navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title == 'Home') ? 'active' : undefined)
          a.nav-link(href="/") Home
        li.nav-item(class=(title == 'API Example') ? 'active' : undefined)
          a.nav-link(href="/api") API Examples
        li.nav-item(class=(title == 'Contact') ? 'active' : undefined)
          a.nav-link(href="/contact") Contact
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item
            a.nav-link(href="/login") Login
          li.nav-item
            a.nav-link(href="/signup") SignUp
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-link
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture, alt='profile pic')
              else
                img(src=user.gravatar(60), alt='profile pic')
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account') My Account
              li.divider.dropdown-item
              li.dropdown-item
                a(href='logout') Logout